{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://host.docker.internal:5341/"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithProcessId",
            "WithThreadId"
        ]
    },
    "Redis": {
        "Host": "host.docker.internal"
    },
    "AllowedHosts": "*"
}
